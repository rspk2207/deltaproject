  script.
    const navbar = document.getElementById("navbar");
    const down = navbar.offsetTop;
    window.onscroll = ()=>{
      if(window.pageYOffset >= down)
      {
        navbar.classList.add("down");
      }
      else 
      {
        navbar.classList.remove("down");
      }
    }